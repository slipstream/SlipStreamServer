<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <fileSets>
    <fileSet>
      <directory>target/dependency/lib/ext</directory>
      <outputDirectory>${installation.dir}/lib</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>${installation.dir}/resources</outputDirectory>
      <includes>
        <include>log4j.properties</include>
        <include>db.spec</include>
      </includes>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>src/main/tools/config/log4j.properties</source>
      <outputDirectory>${installation.dir}/tools/resources</outputDirectory>
    </file>
    <file>
      <source>src/main/resources/cyclone_pubkey.pem</source>
      <outputDirectory>/etc/slipstream/auth</outputDirectory>
    </file>
    <file>
      <source>src/main/tools/scripts/ss-config.sh</source>
      <outputDirectory>/usr/bin</outputDirectory>
      <destName>ss-config</destName>
      <fileMode>755</fileMode>
    </file>
    <file>
      <source>src/main/tools/scripts/ss-config-dump.sh</source>
      <outputDirectory>/usr/bin</outputDirectory>
      <destName>ss-conf-dump</destName>
      <fileMode>755</fileMode>
    </file>
    <file>
      <source>src/main/tools/scripts/ss-config-migrate.sh</source>
      <outputDirectory>/usr/bin</outputDirectory>
      <destName>ss-config-migrate</destName>
      <fileMode>755</fileMode>
    </file>
    <file>
      <source>target/dependency/SlipStreamToolsCli-jar-${project.version}.jar</source>
      <outputDirectory>${installation.dir}/tools</outputDirectory>
    </file>
    <file>
      <source>target/cimi-tools-cli</source>
      <outputDirectory>/etc/default</outputDirectory>
    </file>
    <file>
      <source>src/main/scripts/generate-auth-keys.sh</source>
      <outputDirectory>${installation.dir}/bin</outputDirectory>
      <fileMode>755</fileMode>
    </file>
  </files>
</assembly>
