<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.sixsq.slipstream</groupId>
  <artifactId>SlipStreamServer</artifactId>
  <version>1.2-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>SlipStream Server</name>
  <url>http://sixsq.com/</url>

  <parent>
    <groupId>com.sixsq.slipstream</groupId>
    <artifactId>SlipStream</artifactId>
    <version>1.1</version>
  </parent>

  <modules>
     <module>jar</module>
     <module>war</module>
  </modules>

  <profiles>
    <profile>
      <id>build-server-rpm</id>
      <activation>
        <file>
          <exists>/usr/bin/rpmbuild</exists>
        </file>
      </activation>
      <modules>
        <module>rpm</module>
      </modules>
    </profile>
  </profiles>

  <repositories>
    <repository>
      <id>maven-restlet</id>
      <name>Public online Restlet repository</name>
      <url>http://maven.restlet.org</url>
    </repository>
  </repositories>

  <scm>
    <connection>scm:git:ssh://git@github.com/SixSq/SlipStreamServer.git</connection>
    <url>scm:git:ssh://git@github.com/SixSq/SlipStreamServer.git</url>
    <developerConnection>scm:git:ssh://git@github.com/SixSq/SlipStreamServer.git</developerConnection>
    <tag>HEAD</tag>
  </scm>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>2.5.3</version>
      </plugin>
    </plugins>
  </reporting>

  <build>
    <pluginManagement>
      <plugins>
		<plugin>
		    <artifactId>maven-release-plugin</artifactId>
		    <version>2.4</version>
		    <configuration>
		       <preparationGoals>clean install</preparationGoals>
		    </configuration>
		</plugin>
      </plugins>
    </pluginManagement>
  </build>

  <properties>

    <logger.level>INFO</logger.level>
    <logger.filepattern>${project.build.directory}/instance/SlipStreamServer/var/log/slipstream.%g
    </logger.filepattern>

  </properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.jclouds</groupId>
				<artifactId>jclouds-all</artifactId>
				<version>1.5.5</version>
				<type>jar</type>
			</dependency>
		</dependencies>
	</dependencyManagement>

</project>
