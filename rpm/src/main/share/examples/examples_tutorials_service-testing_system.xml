wget -t 2 -O /tmp/data.txt ${ENDPOINT}
[ "$?" = "0" ] &amp; ss-set statecustom "OK: $(cat /tmp/data.txt)" || ss-abort "Could not get the test file: ${ENDPOINT}"
</target>
