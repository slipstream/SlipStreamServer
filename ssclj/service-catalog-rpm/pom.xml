<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <artifactId>ssclj-service-catalog-rpm</artifactId>
  <name>ssclj-service-catalog-rpm</name>
  <description>SlipStream Service Catalog Resources (RPM)</description>

  <packaging>jar</packaging>

  <parent>
    <groupId>com.sixsq.slipstream</groupId>
    <artifactId>SlipStreamCljResources</artifactId>
    <version>3.17-SNAPSHOT</version>
  </parent>

  <dependencies>

    <dependency>
      <groupId>com.sixsq.slipstream</groupId>
      <artifactId>ssclj-service-catalog-jar-dep</artifactId>
      <version>${project.version}</version>
      <type>pom</type>
      <scope>provided</scope>
    </dependency>

  </dependencies>

  <build>
    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy</id>
            <phase>package</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>com.sixsq.slipstream</groupId>
                  <artifactId>ssclj-service-catalog-jar</artifactId>
                  <version>${project.version}</version>
                  <type>jar</type>
                  <destFileName>service-catalog.jar</destFileName>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <classifier>${package.os}</classifier>
          <release>${BUILD_NUMBER}.${package.os}</release>
          <summary>SlipStream Service Catalog</summary>
          <name>slipstream-service-catalog${slipstream.edition}</name>
          <group>System</group>
          <vendor>SlipStream</vendor>
          <packager>SlipStream</packager>
          <license>SixSq Commercial License</license>
          <url>http://sixsq.com</url>
          <needarch>noarch</needarch>
          <description>
            SlipStream Service Catalog
          </description>
          <requires>
            <require>slipstream-ssclj${slipstream.edition}</require>
          </requires>

          <!-- FIXME: Add restart of ssclj server! -->
          
          <defaultDirmode>755</defaultDirmode>
          <defaultFilemode>644</defaultFilemode>
          <defaultGroupname>slipstream</defaultGroupname>
          <defaultUsername>slipstream</defaultUsername>
          
          <mappings>
            
            <mapping>
              <directory>/opt/slipstream/ssclj/lib/ext</directory>
              <directoryIncluded>false</directoryIncluded>
              <sources>
                <source>
                  <location>${project.basedir}/target</location>
                  <includes>
                    <include>service-catalog.jar</include>
                  </includes>
                </source>
              </sources>
            </mapping>
            
          </mappings>
          
        </configuration>
        
        <executions>
          <execution>
            <id>attach-rpm</id>
            <phase>package</phase>
            <goals>
              <goal>attached-rpm</goal>
            </goals>
          </execution>
        </executions>
        
      </plugin>
    </plugins>
  </build>

</project>
