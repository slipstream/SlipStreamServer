  <profiles>

    <profile>
      <id>full-compile</id>
      <activation>
        <property>
          <name>!skipTests</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>com.theoryinpractise</groupId>
            <artifactId>clojure-maven-plugin</artifactId>

            <executions>
              <execution>
                <id>syntax-check-source</id>
                <goals>
                  <goal>compile</goal>
                </goals>
                <phase>compile</phase>
                <configuration>
                  <warnOnReflection>true</warnOnReflection>
                  <temporaryOutputDirectory>true</temporaryOutputDirectory>
                  <runWithTests>true</runWithTests>
                  <sourceDirectories>
                    <sourceDirectory>src/main/clojure</sourceDirectory>
                  </sourceDirectories>
                  <testSourceDirectories>
                    <sourceDirectory>src/test/clojure</sourceDirectory>
                  </testSourceDirectories>
                </configuration>
              </execution>

              <execution>
                <configuration>
                  <clojureOptions>-Dconfig-path=config-hsqldb-mem.edn -Dpassphrase=sl1pstre8m</clojureOptions>
                </configuration>
                <id>clojure-tests</id>
                <goals>
                  <goal>test</goal>
                </goals>
                <phase>test</phase>
              </execution>

            </executions>

          </plugin>

          <plugin>
            <artifactId>maven-clean-plugin</artifactId>
            <configuration>
              <filesets>
                <fileset>
                  <directory>.</directory>
                  <includes>
                    <include>**/*.lein-env</include>
                  </includes>
                </fileset>
              </filesets>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>

  </profiles>

  <build>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <additionalClasspathElements>
            <additionalClasspathElement>${basedir}/src/main/clojure</additionalClasspathElement>
            <additionalClasspathElement>${basedir}/src/test/clojure</additionalClasspathElement>
          </additionalClasspathElements>
          <systemPropertyVariables>
            <config-path>config-hsqldb-mem.edn</config-path>
            <passphrase>sl1pstre8m</passphrase>
          </systemPropertyVariables>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer" />
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <manifestEntries>
                    <Main-Class>com.sixsq.slipstream.ssclj.app.main</Main-Class>
                  </manifestEntries>
                </transformer>
                <transformer implementation="org.apache.maven.plugins.shade.resource.DontIncludeResourceTransformer">
                  <resources>
                    <resource>classes/log4j.properties</resource>
                    <resource>.SF</resource>
                    <resource>.RSA</resource>
                    <resource>.DSA</resource>
                    <resource>config-hsqldb-mem.edn</resource>
                    <resource>config-hsqldb.edn</resource>
                    <resource>example-event.json</resource>
                    <resource>classes/auth_privkey.pem</resource>
                    <resource>classes/auth_pubkey.pem</resource>
                  </resources>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>com.theoryinpractise</groupId>
        <artifactId>clojure-maven-plugin</artifactId>

        <executions>

          <execution>
            <id>minimal-compile</id>
            <goals>
              <goal>compile</goal>
            </goals>
            <phase>compile</phase>
            <configuration>
              <namespaces>
                <namespace>com.sixsq.slipstream.ssclj.app.main</namespace>
                <namespace>com.sixsq.slipstream.ssclj.api.acl</namespace>
                <namespace>com.sixsq.slipstream.ssclj.api.korma-helper</namespace>
                <namespace>com.sixsq.slipstream.ssclj.usage.record-keeper</namespace>
                <namespace>com.sixsq.slipstream.ssclj.usage.summary</namespace>
                <namespace>com.sixsq.slipstream.ssclj.usage.summarizer</namespace>
                <namespace>com.sixsq.slipstream.ssclj.migrate.script</namespace>
              </namespaces>
              <compileDeclaredNamespaceOnly>true</compileDeclaredNamespaceOnly>
            </configuration>
          </execution>

        </executions>

      </plugin>

    </plugins>
  </build>

</project>
